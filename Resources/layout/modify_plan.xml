<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:orientation="vertical">
    <TextView
        android:text="Change Name :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_text" />
    <EditText
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:id="@+id/namenew_input"
        android:text=""/>

    <TextView
        android:id="@+id/DateStart_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Starting Date :" />

    <EditText
        android:id="@+id/dateStartnew_input"
        android:layout_width="157.5dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/dateEnd_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Ending Date :" />

    <EditText
        android:id="@+id/dateEndnew_input"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Credit :" />
    <EditText
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:id="@+id/moneynew_input"
        android:layout_marginRight="0.0dp"
        android:text=""/>
    <Button
        android:text="accept changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modifyplan_button"
         />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout2" >
        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backtoplan_button" 
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>