<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation=    "vertical"
    android:layout_width=    "match_parent"
    android:layout_height=    "match_parent"
    android:divider="@drawable/spacer_m"
    android:showDividers="middle"
    android:gravity="center" >

    <TextView
        android:text="SavingApp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />

    <Button
        android:id="@+id/browseplans_button"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
 
        android:text="Browse existing saving plans" />

    <Button
        android:id="@+id/newplan_button"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="Create new saving plan" />
    <Button
        android:text="Summaries"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:id="@+id/summary_button" />
</LinearLayout>